<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bottamcurve">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/outfit_medium"
            android:text="Select an Address"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="13dp"
                android:outlineSpotShadowColor="@color/midgreen"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:strokeColor="#f9faf9"
                app:strokeWidth="0dp">
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/plus"
                        app:tint="@color/RED" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="50dp"
                        android:fontFamily="@font/outfit_medium"
                        android:text="Add Address"
                        android:textColor="@color/RED"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/chevron"
                        app:tint="@color/orcolor" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="13dp"
                android:outlineSpotShadowColor="@color/midgreen"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:strokeColor="#f9faf9"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvdelevers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/outfit_regular"
                        android:text="DELIVERS TO"
                        android:textColor="@color/blue"
                        android:textSize="13dp"

                        />

                    <!-- <ImageView
                         android:id="@+id/ivhome"
                         android:layout_width="22dp"
                         android:layout_height="22dp"

                         android:src="@drawable/discount" />-->

                    <LinearLayout
                        android:id="@+id/lladdesstv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ivhome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="20dp"
                                android:src="@drawable/home__2_"
                                app:tint="@color/orcolor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginStart="20dp"
                                android:text="8 Km"
                                android:textColor="@color/orcolor"
                                android:textSize="10dp" />

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">


                            <TextView
                                android:id="@+id/tvusername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/outfit_medium"
                                android:text="Udit Patidar"
                                android:textColor="@color/black"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/bholaram"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvusername"
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="@font/outfit_medium"
                                android:maxLines="2"
                                android:minLines="2"
                                android:text="Bholaram petrol pump,Pipliya Pala,Ambikapuri,Indore"
                                android:textColor="@color/orcolor"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/tvPhoneNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/bholaram"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/outfit_medium"
                                android:text="Phone number :+91-9685295771 " />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_below="@+id/tvPhoneNumber">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:backgroundTint="@color/white"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="20dp"
                                    app:strokeColor="@color/orcolor"
                                    app:strokeWidth="0.5dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="7dp"
                                        android:src="@drawable/dots_menu__1_"
                                        app:tint="@color/RED" />

                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginStart="20dp"
                                    android:backgroundTint="@color/white"
                                    android:elevation="5dp"
                                    app:cardCornerRadius="20dp"
                                    app:strokeColor="@color/orcolor"
                                    app:strokeWidth="0.5dp">

                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"

                                        android:layout_gravity="center"
                                        android:src="@drawable/share"
                                        app:tint="@color/RED" />

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>


                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>