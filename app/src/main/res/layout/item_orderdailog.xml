<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:strokeWidth="0dp"
        android:elevation="5dp"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/check_circle_fill" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="3"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/outfit_regular"
                android:text="You successfully place an order, your order is confirmed and delivered within 20 minutes. Wish you enjoy the food"
                android:textColor="@color/orcolor"
                android:textSize="15dp" />

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="KEEP BROWSING"
                     android:layout_gravity="center"
                     android:layout_marginTop="10dp"
                     android:textColor="#EF9F27"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
