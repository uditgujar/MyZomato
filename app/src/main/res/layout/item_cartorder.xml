<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:paddingHorizontal="10dp">




        <RelativeLayout
            android:id="@+id/rldishesCart"
            android:layout_width="match_parent"
            android:layout_marginVertical="7dp"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/dot"/>

            <TextView
                android:id="@+id/tvDishesNameCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/outfit_semibold"
                android:text="Shree Leela Special Panner"
                android:textColor="@color/black"
                android:layout_marginStart="25dp"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/tvCartPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDishesNameCart"
                android:fontFamily="@font/outfit_medium"
                android:text="300"

                android:layout_marginStart="25dp"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvCartPrice"
                android:layout_marginStart="25dp"
                android:textColor="@color/RED"
                android:fontFamily="@font/outfit_bold"
                android:textSize="12dp"
                android:text="Edit" />

            <androidx.cardview.widget.CardView
                android:id="@+id/quantityOptionsCart"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:visibility="visible"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/RED"
                app:cardCornerRadius="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/minusButtonCart"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="7dp"
                        android:src="@drawable/minus"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/quantityTextCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/outfit_medium"
                        android:text="0"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/plusButtonCart"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="7dp"
                        android:src="@drawable/plus"
                        app:tint="@color/white" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!--<TextView
                android:id="@+id/tvCartTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="15dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/outfit_bold"
                android:layout_marginTop="50dp"/>-->


        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/rldishesCart"
        android:layout_marginHorizontal="10dp"
        android:background="@color/orcolor" />

</RelativeLayout>